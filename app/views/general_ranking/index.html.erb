<div class="page-header">
  <h2>Ranking Geral da Galera</h2>
</div>

<table class="table table-hover span5">
  <thead>
    <tr>
      <th>Boleiro</th>
      <th>Pontos</th>
    </tr>
  </thead>
  <tbody>
    <% unless @general_ranking.empty? %>
      <% @general_ranking.each do |ranking| %>
        <% if @general_ranking.first == ranking %>
          <tr class="info">
            <td><h3><%= ranking[:user].full_name %></h3></td>
            <td><h3><%= ranking[:pointing].point %></h3></td>
          </tr>
        <% elsif @general_ranking.last == ranking %>
          <tr class="error">
            <td><h5><%= ranking[:user].full_name %></h5></td>
            <td><h5><%= ranking[:pointing].point %></h5></td>
          </tr>
        <% else %>
          <tr>
            <td><h6><%= ranking[:user].full_name %></h6></td>
            <td><h6><%= ranking[:pointing].point %></h6></td>
          </tr>
        <% end %>
      <% end %>
    <% end %>
  </tbody>
</table>
