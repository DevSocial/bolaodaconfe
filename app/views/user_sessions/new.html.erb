<% if @session.errors.has_key? :base %>
  <div id="error_explanation">
    <%= @session.errors[:base].join(', ') %>
  </div>
<% end %>

<%= form_for @session, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend>Login</legend>
    <div class="control-group">
      <%= f.label 'Email', :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :email, :class => 'text_field' %>
          <%= error_tag @session, :email %>
        </div>
    </div>
    <div class="control-group">
      <%= f.label 'Senha', :class => 'control-label' %>
        <div class="controls">
          <%= f.password_field :password, :class => 'text_field' %>
          <%= error_tag @session, :password %>
        </div>
    </div>
    <div class="form-actions">
      <%= f.submit 'Entrar', :class => 'btn btn-primary' %>
      <%= link_to 'Cadastre-se', new_user_path, :class => 'btn' %>
    </div> 
  </fieldset>
<% end %>
