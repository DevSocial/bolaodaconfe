          <span class="badge badge-info" title="Resultado da partida"><%= is_nil @match.final_result2 %></span>
        </td>
        <td class='span2'><%= image_tag(@match.team2.flag) %></td>
      </tr>
  </tbody>
</table>

<table class="table table-hover span3">
  <tbody>
    <% @results.each do |result| %>
    <tr>
      <td><%= result.user.full_name %></td>
      <td><%= result.result1 %></td>
      <td><%= image_tag("vs.png", :size => "30x30", :class => 'img-rounded') %></td>
      <td><%= result.result2 %></td>
    </tr>
    <% end %>
  </tbody>
</table>
